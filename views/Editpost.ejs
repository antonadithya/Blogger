<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogger</title>
</head>
<body>
   <section class="CreatePost EditPost">
      <div class="container-createPost footer card container">
        <form action="/edited/<%= id %>" method="POST" enctype="multipart/form-data">
   
           <div class="form-container">
             <div class="Post-Title">
               <h2>Article Title</h2>
               <input type="text" name="Title" placeholder="Type here" required="" class="input-field" autocomplete="off"  value="<%= post.Title %>">
             </div>

               <div class="Post-Content">
                 <h2>Post content</h2>
                 <textarea name="content" id="" cols="33" rows="10" class="input-field post-content" required ="" autocapitalize="off">
                  <%= post.content %>
                 </textarea>
                   <div class="Edit-Img">
                  <img id="imagePreview" src="<%= post.Img %>" alt="Image Preview" width="200px" height="200px">
                  <input type="file" id="selectedFile" name="Img" class=".add-photo-btn " onchange="displayImage()"/>
                  </div>

               </div>
               <div class="post-card">
                 <div class="Auther">
                   <h3>Author</h3>
                 <input type="text" name="Author" placeholder="Type name" required="" class="input-field" autocomplete="off" value="<%= post.Author %>">
                 </div>

                 <div class="post-tag post-card">
                  <div>
                  <h3>Tag</h3>
                   <input type="text" name="tag" placeholder="#Tags here" required="" class="input-field" autocomplete="off" value="<%= post.tag %>">
                   </div>
                   <div>
                   <h3>Badge</h3>
                   <input type="text" name="Badge" placeholder="#Tags here" required="" class="input-field" autocomplete="off" value="<%= post.Badge %>">
                   </div>
                 </div>
               </div>
           </div>
              <div class="form-btn-container">
           <button type="submit" class="btn btn-primary btn-form" value="submit">
               <span class="span">Update</span>
               <ion-icon name="arrow-forward" aria-hidden="true" role="img" class="md hydrated"></ion-icon>
            </button>
            </div>

         </form>

         <script>
  function displayImage() {
    const selectedFile = document.getElementById('selectedFile').files[0];

    if (selectedFile) {
      const reader = new FileReader();

      reader.onload = function (e) {
        const imagePreview = document.getElementById('imagePreview');
        imagePreview.src = e.target.result;
      };

      reader.readAsDataURL(selectedFile);
    }
  }
</script>


      </div>
    </section>

</body>
</html>

